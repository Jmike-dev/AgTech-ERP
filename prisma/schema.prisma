generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  adminId      String    @id @default(cuid())
  firstName    String
  lastName     String
  email        String    @unique
  password     String
  created_At   DateTime  @default(now())
  refreshToken String?
  farmers      Farmers[]
  
  @@map("admins")
}

model Farmers {
  farmerId     String    @id @default(cuid())
  firstName    String
  lastName     String
  email        String    @unique
  password     String
  createdAt    DateTime  @default(now())
  refreshToken String?
  adminId      String
  
  // Relationships
  admin        Admin     @relation(fields: [adminId], references: [adminId], onDelete: Cascade)
  crops        Crops[]
  
  @@map("farmers")
}

model Crops {
  cropId   String  @id @default(cuid())
  name      String
  number    Int  
  farmerId  String
  farmer    Farmers @relation(fields: [farmerId], references: [farmerId], onDelete: Cascade)
  
  @@map("crops")
}